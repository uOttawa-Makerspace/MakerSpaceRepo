<section id="setting">
  <div class="setting-grid">
    <div class="container-fluid px-4">
      
      <!-- Page Title -->
      <div class="row mb-5">
        <div class="col-12 text-center">
          <h3 class="display-6 fw-bold">
            Key Certifications
          </h3>
          <p class="text-muted"><%= @key_certification.user.name %></p>
        </div>
      </div>

      <!-- STAFF FILES SECTION -->
      <div class="mb-5">
        <div class="d-flex align-items-center mb-4 border-bottom pb-2">
          <h4 class="m-0 text-uppercase fs-6 letter-spacing-2 text-primary">Staff Documents</h4>
        </div>

        <!-- Grid: 1 column on mobile, 2 on laptop, 3 on large screens -->
        <div class="row row-cols-1 row-cols-lg-2 row-cols-xxl-3 g-4">
          <% (1..KeyCertification::NUMBER_OF_STAFF_FILES).each do |i| %>
            <% 
               file_name = KeyCertification::FILE_NAMES[i - 1].gsub('-', ' ').humanize 
               attachment = @key_certification.send("pdf_file_#{i}")
            %>
            <div class="col">
              <div class="cert-card h-100">
                <!-- Card Header -->
                <div class="cert-header d-flex justify-content-between align-items-center">
                  <h5 class="m-0 text-truncate" title="<%= file_name %>"><%= file_name %></h5>
                  <% if attachment.attached? && @user.eql?(@key_certification.user) %>
                    <%= button_to destroy_pdf_key_certification_path(id: @key_certification.id, file_number: i), 
                        method: :delete, 
                        class: 'btn btn-sm btn-outline-danger ms-2', 
                        data: { confirm: 'Are you sure you want to delete this certification?' } do %>
                        <i class="bi bi-trash"></i> Delete
                    <% end %>
                  <% end %>
                </div>

                <!-- Card Body -->
                <div class="cert-body">
                  <% if attachment.attached? %>
                    <div class="ratio ratio-16x9">
                      <iframe src="<%= url_for(attachment) %>" loading="lazy" allowfullscreen></iframe>
                    </div>
                  <% else %>
                    <div class="empty-state">
                      <div class="text-center text-muted">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-earmark-x mb-2" viewBox="0 0 16 16" style="opacity: 0.5;">
                          <path d="M6.854 7.146a.5.5 0 1 0-.708.708L7.293 9l-1.147 1.146a.5.5 0 0 0 .708.708L8 9.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 9l1.147-1.146a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146z"/>
                          <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z"/>
                        </svg>
                        <p class="m-0 small">Not Attached</p>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- SUPERVISOR FILES SECTION -->
      <% if @user.admin? %>
        <div class="mb-5">
          <div class="d-flex align-items-center mb-4 border-bottom pb-2">
            <h4 class="m-0 text-uppercase fs-6 letter-spacing-2 text-info">Supervisor Documents</h4>
          </div>

          <div class="row row-cols-1 row-cols-lg-2 row-cols-xxl-3 g-4">
            <% ((KeyCertification::NUMBER_OF_STAFF_FILES + 1)..KeyCertification::TOTAL_NUMBER_OF_FILES).each do |i| %>
              <% 
                 file_name = KeyCertification::FILE_NAMES[i - 1].gsub('-', ' ').humanize 
                 attachment = @key_certification.send("pdf_file_#{i}")
              %>
              <div class="col">
                <div class="cert-card h-100">
                  <div class="cert-header d-flex justify-content-between align-items-center">
                    <h5 class="m-0 text-truncate" title="<%= file_name %>"><%= file_name %></h5>
                    <% if attachment.attached? && @user.eql?(@key_certification.user) %>
                      <%= button_to destroy_pdf_key_certification_path(id: @key_certification.id, file_number: i), 
                          method: :delete, 
                          class: 'btn btn-sm btn-outline-danger ms-2', 
                          data: { confirm: 'Are you sure you want to delete this certification?' } do %>
                          Delete
                      <% end %>
                    <% end %>
                  </div>

                  <div class="cert-body">
                    <% if attachment.attached? %>
                      <div class="ratio ratio-16x9">
                        <iframe src="<%= url_for(attachment) %>" loading="lazy" allowfullscreen></iframe>
                      </div>
                    <% else %>
                      <div class="empty-state">
                        <div class="text-center text-muted">
                          <p class="m-0 small">Not Attached</p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      
    </div>
  </div>
</section>