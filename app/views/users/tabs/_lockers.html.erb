<h3>My Lockers</h3>
<div class="row">
    <% @locker_rentals.active.find_each do |locker_rental| %>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <p class="fs-4"><%= t('lockers.locker') %> #<%= locker_rental.locker.specifier %></p>
                    <p><%= t('lockers.owned_until') %> <%= locker_rental.owned_until&.to_fs :long %></p>
                    <%= link_to t('lockers.view_locker_request'), locker_rental_path(locker_rental), class: 'btn btn-primary stretched-link' %>
                </div>
            </div>
        </div>
    <% end %>
</div>
