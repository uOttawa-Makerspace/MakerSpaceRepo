<div class="container">
    <div class="row align-items-start">
        <div class="col-4 py-3 px-my-5">
            <%= render "badge_icon", width: "", height: "", level: @certification.level, name_en: @certification.get_name_en, name_fr: @certification.get_name_fr, skill: @certification.get_skill_id %>
        </div>
        <div class="col-8 py-3 px-my-5">
            <h1><%= @certification.training.localized_name %></h1>
            <h4 class="my-3 fw-bold">Badge Owner: <%= @earner.name %></h4>
            <h5 class="my-3">Issued by CGEC/CEED - uOttawa on <%= @certification.created_at.to_date.to_fs :long_ordinal %></h5>
            <p><%= @certification.training.description %></p>

            <a class="my-4 text-decoration-underline" href="https://www.uottawa.ca/faculty-engineering/">Learn more</a>

            <div class="my-5">
                <h5>Skills</h5>
                <p><%= @certification.training.list_of_skills %></p>
            </div>
        </div>
    </div>
</div>
