<section id="volunteersIndex" class="mt-n3">
    <div class="jumbotron volunteerJumbotron">
        <h1 class="display-1"><%= t('volunteers.header_html') %></h1>
        <p><%= t('volunteers.subtitle_html') %></p>
        <%= link_to t('volunteers.join_button'), join_volunteer_program_volunteers_path, class: 'btn btn-primary' %>
    </div>
    <div class="shadow">
        <%= render partial: 'layouts/volunteer_header' %>
    </div>
    <div class="container p-4">
        <h2 class="my-5 display-5"><%= t('volunteers.why_volunteer.header_html') %></h2>
        <div class="row row-cols-5 mb-5">
            <div>
                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                <p><%= t('volunteers.why_volunteer.floppy') %></p>
            </div>
            <div>
                <i class="fa fa-users" aria-hidden="true"></i>
                <p><%= t('volunteers.why_volunteer.users') %></p>
            </div>
            <div>
                <i class="fa fa-comments-o" aria-hidden="true"></i>
                <p><%= t('volunteers.why_volunteer.comments') %></p>
            </div>
            <div>
                <i class="fa fa-cloud" aria-hidden="true"></i>
                <p><%= t('volunteers.why_volunteer.cloud') %></p>
            </div>
            <div>
                <i class="fa fa-gift" aria-hidden="true"></i>
                <p><%= t('volunteers.why_volunteer.gift') %></p>
            </div>
        </div>
        <div class="gx-5 mb-5">
            <h2><%= t('volunteers.volunteer_opportunities.header') %></h2>
            <h3 class="subtext-primary"><%= t('volunteers.volunteer_opportunities.subheader') %></h3>
            <div class="row ps-3">
                <ul class="col-lg-3">
                    <% t('volunteers.volunteer_opportunities.points')[0..3].each do |point| %>
                        <li><%= point.html_safe %></li>
                    <% end %>
                    <% t('volunteers') %>
                </ul>
                <ul class="col-lg-3">
                    <% t('volunteers.volunteer_opportunities.points')[4..8].each do |point| %>
                        <li><%= point.html_safe %></li>
                    <% end %>
                </ul>
                <div class="align-content-center col-lg-6">
                    <%= image_tag 'volunteer/opportunities.png', class: 'img-fluid' %>
                </div>
            </div>
        </div>
    </div>
    <!-- FIXME make this the secondary color(?) -->
    <div class="bg-body-tertiary">
        <div class="container pb-3">
            <div class="row p-3">
                <div class="col-lg-6">
                    <% t('volunteers.skills.steps')[0, 2].each.with_index(1) do |step, index| %>
                        <div class="numberedCard row row-cols-2">
                            <p><%= index %></p>
                            <div class="numberedBody">
                                <p><%= step[:header] %></p>
                                <p><i class="fa fa-square-o"></i><%= step[:points][0] %></p>
                                <p><i class="fa fa-square-o"></i><%= step[:points][1] %></p>
                            </div>
                        </div>
                    <% end %>
                    <% t('volunteers.skills.steps')[2].tap do |step| %>
                        <div class="numberedCard row row-cols-2">
                            <p>3</p>
                            <div class="numberedBody">
                                <p><%= step[:header] %></p>
                                <ul>
                                    <li><%= step[:points][0] %></li>
                                    <li><%= step[:points][1] %></li>
                                </ul>
                            </div>
                        </div>
                    <% end %>
                </div>
                <div class="offset-lg-1 col-lg-5">
                    <h3 class="display-6 fw-bold lh-base">Build skills in either the Makerspace or Brunsfield by completing tasks generated by the space managers.</h3>
                    <%= image_tag 'volunteer/skills.png', class: 'img-fluid' %>
                </div>
            </div>
            <div class="box-subtext mt-5">
                <h3><%= t('volunteers.proficiency_projects.header') %></h3>
                <p><%= t('volunteers.proficiency_projects.line_1') %></p>
                <p><%= t('volunteers.proficiency_projects.line_2') %></p>
                <p><%= t('volunteers.proficiency_projects.line_3') %></p>
            </div>
            <p class="fw-bold ms-5"><%= t('volunteers.proficiency_projects.prelink') %> <a href="#"><%= t('volunteers.proficiency_projects.link') %></a></p>
        </div>
    </div>
    <div class="container">
        <div class="box-subtext mt-5">
            <h2><%= t('volunteers.how_volunteering.header') %></h2>
            <p><%= t('volunteers.how_volunteering.line_1') %></p>
            <p><%= t('volunteers.how_volunteering.line_2') %> <a href="mailto:volunteer@makerepo.com">volunteer@makerepo.com</a></p>
        </div>
    </div>
</section>
