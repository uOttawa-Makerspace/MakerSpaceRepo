<!DOCTYPE html>
<html>
  <head>
    <title>Development Program | <%= page_title(yield(:title)) %></title>
    <%= favicon_link_tag 'C_square.png' %>
    <%= vite_javascript_tag 'application', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= vite_stylesheet_tag 'application.scss', media: 'all', 'data-turbo-track': 'reload' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!--    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">-->
  </head>
  <body>
    <%= render 'layouts/header', with_development: true %>

    <%= render partial: 'partials/announcements' %>

    <section>
      <div class="bg-white">
        <div class="container">
          <%= yield %>
        </div>
      </div>
    </section>
    <%= render 'layouts/footer' %>
    <%= vite_javascript_tag controller_name if File.exist?("#{Rails.root}/app/javascript/entrypoints/#{controller_name}.js") %>
  </body>
</html>
