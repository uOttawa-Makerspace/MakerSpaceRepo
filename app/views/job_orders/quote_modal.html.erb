<div id="quote-modal-rendered">
  <%= form_for(@job_order, url: job_order_quote_url(@job_order), html: { multipart: true }) do |f| %>
    <div class="modal-body">
      <%= hidden_field_tag :approved, true %>

      <div class="form-group">
        <%= label_tag :service_fee, 'Service Charges (In CAD) ' %>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <%= number_field_tag :service_fee, @job_order.job_type.service_fee, { step: '0.01', class: 'form-control money-input', required: true } %>
        </div>
      </div>

      <% @job_order.job_services.each do |service| %>
        <div class="row">
          <div class="col-md-12">
            <p><b><%= service.name %></b></p>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag "quote_service_amount_#{service.id}", "Number of #{service.unit.presence || 'unit'}" %>
              <div class="input-group mb-3">
                <%= number_field_tag "quote_service_amount_#{service.id}", '', step: '0.01', placeholder: '100', class: 'form-control', required: true %>
                <div class="input-group-append">
                  <span class="input-group-text"><%= service.unit.presence || 'unit' %></span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <%= label_tag "quote_service_per_unit_#{service.id}", "Price per #{service.unit.presence || 'unit'} (In CAD) " %>
              <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">$</span>
                </div>
                <%= number_field_tag "quote_service_per_unit_#{service.id}", @job_order.user.internal? ? service.internal_price : service.external_price, { step: '0.01', placeholder: '0.25', class: 'form-control money-input', required: true } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% @job_type_extras.each do |extra| %>
        <div class="row">
          <div class="col-md-12">
            <p><b><%= extra.name %></b></p>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <%= label_tag "quote_extra_amount_#{extra.id}", 'Price (In CAD) ' %>
              <%= number_field_tag "quote_extra_amount_#{extra.id}", extra.price, { step: '0.01', placeholder: '0.25', class: 'form-control money-input', required: true } %>
            </div>
          </div>
        </div>
      <% end %>

      <% @job_order.job_order_options.each do |option| %>
        <div class="row">
          <div class="col-md-12">
            <p><b><%= option.job_option.name %></b></p>
          </div>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <%= label_tag "quote_option_amount_#{option.job_option_id}", 'Price (In CAD) ' %>
            <%= number_field_tag "quote_option_amount_#{option.job_option_id}", option.job_option.fee, { step: '0.01', placeholder: '0.25', class: 'form-control money-input', required: true } %>
          </div>
        </div>
      <% end %>

      <div class="form-group my-3">
        <%= f.label :staff_files, 'Staff Files (GCode/PDF..)' %>
        <%= f.file_field :staff_files, style: 'display: block!important;', multiple: true, class: 'form-control mb-2' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :user_comments, 'Comments for the user' %>
        <%= f.text_field :user_comments, placeholder: 'I will need to add supports', class: 'form-control mb-2' %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :staff_comments, 'Comments for the staff members' %>
        <%= f.text_field :staff_comments, placeholder: 'Use the Raise 3D', class: 'form-control' %>
      </div>

      <%= f.submit 'Approve', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
  Array.from(document.getElementsByClassName("money-input")).map((el) => {
    el.addEventListener("change", () => {
      el.value = Number(el.value).toFixed(2);
    });
  });
</script>
