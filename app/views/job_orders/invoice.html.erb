<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Job Order Invoice</title>

  <style>
      .invoice-box {
          max-width: 800px;
          margin: auto;
          padding: 30px;
          border: 1px solid #eee;
          box-shadow: 0 0 10px rgba(0, 0, 0, .15);
          font-size: 16px;
          line-height: 24px;
          font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
          color: #555;
      }

      .invoice-box table {
          width: 100%;
          line-height: inherit;
          text-align: left;
      }

      .invoice-box table td {
          padding: 5px;
          vertical-align: top;
      }

      .invoice-box table tr td:nth-child(2) {
          text-align: right;
      }

      .invoice-box table tr.top table td {
          padding-bottom: 20px;
      }

      .invoice-box table tr.top table td.title {
          font-size: 45px;
          line-height: 45px;
          color: #333;
      }

      .invoice-box table tr.information table td {
          padding-bottom: 40px;
      }

      .invoice-box table tr.heading td {
          background: #eee;
          border-bottom: 1px solid #ddd;
          font-weight: bold;
      }

      .invoice-box table tr.details td {
          padding-bottom: 20px;
      }

      .invoice-box table tr.item td {
          border-bottom: 1px solid #eee;
      }

      .invoice-box table tr.item.last td {
          border-bottom: none;
      }

      .invoice-box table tr.total td:nth-child(2) {
          border-top: 2px solid #eee;
          font-weight: bold;
      }

      @media only screen and (max-width: 600px) {
          .invoice-box table tr.top table td {
              width: 100%;
              display: block;
              text-align: center;
          }

          .invoice-box table tr.information table td {
              width: 100%;
              display: block;
              text-align: center;
          }
      }

   @media print {
     .print-button{
       display: none;
     }

     .invoice-box {
       max-width: unset;
       border: unset;
       box-shadow: unset;
     }
   }

      /** RTL **/
      .rtl {
          direction: rtl;
          font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
      }

      .rtl table {
          text-align: right;
      }

      .rtl table tr td:nth-child(2) {
          text-align: left;
      }
  </style>
  <script>
   window.print();
  </script>
</head>

<body>
<div class="invoice-box">
  <table>
    <tr class="top">
      <td colspan="2">
        <table>
          <tr>
            <td class="title"><%= image_tag 'ceed.png' %></td>
            <td>Invoice #<%= @job_order.id %></td>
          </tr>
        </table>
      </td>
    </tr>

    <tr class="information">
      <td colspan="2">
        <table>
          <tr>
            <td>
              University Of Ottawa Richard L'Abb√© Makerspace<br>
              STM 107<br>
              150 Louis Pasteur<br>
              Ottawa, ON K1N 6N5
            </td>

            <td>
              Client : <%= @job_order.user.name %>
              <br>
              Date : <%= @job_order.job_order_statuses.last.created_at.strftime('%Y/%m/%d') %>
            </td>
          </tr>
        </table>
      </td>
    </tr>

    <tr class="heading">
      <td>
        Payment Method
      </td>
      <td></td>
    </tr>

    <tr class="details">
      <td>
        Please see
        <a href="https://en.wiki.makerepo.com/wiki/How_to_pay_for_an_Order">https://en.wiki.makerepo.com/wiki/How_to_pay_for_an_Order</a>
        for payment details
      </td>
      <td></td>
    </tr>

    <tr class="heading">
      <td>
        Item
      </td>
      <td>
        Price
      </td>
    </tr>

    <% @job_order.job_tasks.each do |task| %>
      <!-- Task Base Fee -->
      <% if task.job_task_quote&.price.to_f > 0 %>
        <tr class="item">
          <td>
            <%= task.title %> - Base Fee
          </td>
          <td>
            CAD <%= number_to_currency(task.job_task_quote.price) %>
          </td>
        </tr>
      <% end %>

      <!-- Task Service -->
      <% if task.job_service && task.job_task_quote&.service_price.to_f > 0 %>
        <tr class="item">
          <td>
            <%= task.title %> - <%= task.job_service.name %>
            <% if task.job_service.job_service_group %>
              (<%= task.job_service.job_service_group.name %>)
            <% end %>
            - <%= "#{task.job_task_quote.service_quantity} #{task.job_service.unit.presence || 'unit'}" %>
          </td>
          <td>
            CAD <%= number_to_currency(task.job_task_quote.service_price * task.job_task_quote.service_quantity) %>
          </td>
        </tr>
      <% end %>

      <!-- Task Options -->
      <% task.job_task_quote&.job_task_quote_options&.each do |option| %>
        <tr class="item">
          <td>
            <%= task.title %> - <%= option.job_option.name %> (Option)
          </td>
          <td>
            CAD <%= number_to_currency(option.price) %>
          </td>
        </tr>
      <% end %>
    <% end %>

    <% if @job_order.job_quote_line_items.any? %>
      <% @job_order.job_quote_line_items.each do |item| %>
        <tr class="item">
          <td>
            <%= item.description.presence || "Line Item" %>
          </td>
          <td>
            CAD <%= number_to_currency(item.price) %>
          </td>
        </tr>
      <% end %>
    <% end %>

    <tr class="total">
      <td></td>
      <td>
        Total: CAD <%= number_to_currency(@job_order.total_price) %>
      </td>
    </tr>
  </table>
  <button class="print-button" onclick="window.print()">Print this page</button>
</div>
</body>
</html>