<% provide :title, "Locker manager" %>

<h1 class="text-center">Locker Rentals</h1>
<p class="text-center">Historic log of rentals and current relevant rentals</p>

<h2>Active locker requests</h2>
<p>Lockers that are pending review, awaiting payment, or are currently occupied.</p>
<div class="p-3 filter-rental-state" id="filter-locker-states">
    <span class="fw-bold me-3">Rental states</span>
    <% LockerRental.states.keys.excluding('cancelled').each do |state| %>
        <div class="form-check form-check-inline">
            <%= check_box_tag :rental_state, state, {}, { id: "rental_state_#{state}", class: 'form-check-input', data: { type: state } } %>
            <%= label :rental_state, state, state.humanize, class: 'form-check-label' %>
        </div>
    <% end %>
</div>
<%= render partial: 'rental_data_table', locals: { locker_rentals: @locker_rentals } %>
