<% provide(:title, "Help Center") %>
<section id="help-center">

  <div class="title">Help Center</div>

  <div class="container">

    <div class="col">
      <div class="category">If you're facing technical issues, please contact us.</div>
    </div>

  </div>
  <div class="issue-report">
    <%= form_tag send_email_path, method: :put do %>
      <div class="mb-3">
      <%= label_tag :name , "Full Name", class:"form-label" %>
      <%= text_field_tag :name,'', autofocus: true, :required => true, :class => 'form-control' %>
      </div>
      <div class="mb-3">
      <%= label_tag :email, class:"form-label" %>
      <%= email_field_tag :email,'', :required => true, :class => 'form-control' %>
      </div>
      <div class="mb-3">
      <%= label_tag :subject, class:"form-label" %>
      <%= text_field_tag :subject,'', :required => true, :class => 'form-control' %>
      </div>
      <div class="mb-3">
      <%= label_tag :comments, class:"form-label" %>
      <%= text_area_tag :comments,'', :required => true, placeholder: "Please explain your issue.", :class => 'form-control' %>
      </div>

      <div class="mb-3">
        <%= recaptcha_tags %>
      </div>

      <%= submit_tag("Submit", class: 'btn btn-primary large') %>
    <% end %>
  </div>
</section>
