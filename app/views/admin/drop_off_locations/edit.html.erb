<section>
  <div class="text-center">
    <h2>Editing <b><%= @location.name.capitalize %></b></h2>
    <div class="float-end">
      <%= link_to 'Back', admin_drop_off_locations_path %>
    </div>
    <br />
    <%= form_for @location, url: { controller: 'admin/drop_off_locations', action: 'update' } do |f| %>
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12 form-group">
            Name: <%= f.text_field :name, placeholder: 'Write a unique name...', class: 'form-control', required: true %>
          </div>

          <div class="col-md-12 form-group my-3">
            <%= f.submit 'Update Location', class: 'btn btn-secondary btn-xl' %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="pb-5">
      <%= link_to 'Delete', { controller: 'admin/drop_off_locations', action: :destroy, id: @location.id }, method: :delete,
                                                                                                            data: { confirm: 'Are you sure that you want to delete this location ?' },
                                                                                                            class: 'btn btn-danger float-end' %>
    </div>
  </div>
</section>