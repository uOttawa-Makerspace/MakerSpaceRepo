<section>
  <%= form_for([:admin, @job_service_group]) do |f| %>
    <% if @job_service_group.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@job_service_group.errors.count, 'error') %> prohibited this service group from being saved:</h2>

        <ul>
          <% @job_service_group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="text-center">
      <div class="col-lg-6 text-center mx-auto mb-3">
        <%= f.label :name, 'Name of the Service Group' %>
        <%= f.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="form-group col-lg-6 mx-auto mb-3">
        <%= f.label :description, 'Description' %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="form-group col-lg-6 mx-auto mb-3">
        <%= f.label :job_type_id, 'Job Type' %>
        <%= f.select :job_type_id, options_from_collection_for_select(JobType.all, :id, :name, @job_service_group.job_type_id.presence || ''), {}, class: 'form-control form-select' %>
      </div>

      <div class="mb-3">
        <%= f.label :text_field, 'Accept text-field input', required: true %>

        <div class="form-check form-check-inline">
          <%= f.radio_button :text_field, 'false', class: 'form-check-input' %>
          <%= f.label :text_field, 'No', class: 'form-check-label', value: 'false' %>
        </div>

        <div class="form-check form-check-inline">
          <%= f.radio_button :text_field, 'true', class: 'form-check-input' %>
          <%= f.label :text_field, 'Yes', class: 'form-check-label', value: 'true' %>
        </div>

        <div class="form-check form-check-inline">
          <%= f.radio_button :text_field, 'option', class: 'form-check-input' %>
          <%= f.label :text_field, 'Option', class: 'form-check-label', value: 'option' %>
        </div>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>

</section>