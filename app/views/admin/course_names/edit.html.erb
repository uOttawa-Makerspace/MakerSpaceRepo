<section class="page-contents">
  <div class="edit-column">
    <h2 class="text-center">Editing <b><%= @course.name.capitalize %></b> Course</h2>
    <%= form_for @course, url: {controller: "admin/course_names", action: "update"} do |f| %>
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12 form-group">
            Name: <%= f.text_field :name, placeholder: "Write an unique name...", class: 'form-control', required: true %>
          </div>

          <div class="col-md-12 form-group my-1">
            <%= f.submit "Update Course", class: "btn btn-secondary btn-xl text-uppercase" %>
          </div>
        </div>
      </div>
    <% end %>

    <%=link_to "Delete", { controller: "admin/course_names" ,action: :destroy, id: @course.id }, method: :delete,
               data: { confirm: 'Are you sure that you want to delete this course ?' },
               class:"btn btn-danger float-right"%>
  </div>
  <div class="float-right">
    <%= link_to "Back", admin_course_names_path %>
  </div>
</section>