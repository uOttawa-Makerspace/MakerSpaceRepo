<h2 class="text-center"><b>Proficient Projects</b></h2>

<div class="container p-5">
  <div class="row text-center">
    <% @videos_pp.each do |f| %>
      <% f.video.each do |video| %>
        <div class="col-md-4" style="margin-bottom: 100px">
          <h5><%= link_to f.proficient_project.title, f.proficient_project %></h5>
          <h5><%= f.processed ? "<h5 class='text-success'>Done<h5>".html_safe : "<h5 class='text-danger'>In progress...<h5>".html_safe  %></h5>
          <%= link_to "Delete", f, method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-danger" %>
          <%= video_tag url_for(video), size: "300x300", controls: true, controlslist: "nodownload" if f.video.attached? %>
          <div class="word-break">
            <h9><%= video.filename %></h9>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

