<div class="text-center">
    <h1 class="title">Printer Issue #<%= @issue.id %></h1>
    <div class="row justify-content-center">
        <div class="col-auto">
            <h2><%= "#{@issue.printer.name}: #{@issue.summary}" %></h2>
            <%= sanitize(@issue.description) %>
        </div>
    </div>
    <div class="row row-cols-3">
        <p><b>Printer: </b><%= @issue.printer.name %></p>
        <p><b>Reporter: </b><%= @issue.reporter.username %> - <%= @issue.reporter.name %></p>
        <p>Created on <%= @issue.created_at.to_formatted_s :db %></p>
    </div>
    <div class="mt-3">
        <h2>Issue description:</h2>
        <p class="mx-5 text-start"><%= sanitize(@issue.description).presence || 'No issue description...' %></p>
    </div>
    <div class="btn-group">
        <%= link_to 'Back', printer_issues_path, class: 'btn btn-secondary' %>
        <%= link_to 'Edit', edit_printer_issue_path(@issue), class: 'btn btn-secondary' %>
    </div>
</div>
